<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.onlineshop.ui.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_eachCategoryFragment2"
            app:destination="@id/eachCategoryFragment2" />
        <action
            android:id="@+id/action_homeFragment_to_hilt_EachCategoryFragment"
            app:destination="@id/hilt_EachCategoryFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchResultFragment"
            app:destination="@id/searchResultFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.onlineshop.ui.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_detailFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_detailFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/eachCategoryFragment2"
        android:name="com.example.onlineshop.ui.each_category.EachCategoryFragment"
        android:label="EachCategoryFragment" >
        <action
            android:id="@+id/action_eachCategoryFragment2_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/hilt_EachCategoryFragment"
        android:name="ui.each_category.Hilt_EachCategoryFragment"
        android:label="Hilt_EachCategoryFragment" />
    <fragment
        android:id="@+id/hilt_HomeFragment"
        android:name="ui.Hilt_HomeFragment"
        android:label="Hilt_HomeFragment" />
    <fragment
        android:id="@+id/searchResultFragment"
        android:name="com.example.onlineshop.ui.search_result.SearchResultFragment"
        android:label="fragment_search_result"
        tools:layout="@layout/fragment_search_result" >
        <action
            android:id="@+id/action_searchResultFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
        <argument android:name="colorList"
            app:argType="string[]" />
        <argument
            android:name="sizeList"
            app:argType="string[]" />
        <argument
            android:name="searchValue"
            app:argType="string" />
        <argument
            android:name="ordderBy"
            app:argType="string" />
        <argument
            android:name="maxPrice"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.onlineshop.ui.setting.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" >
        <action
            android:id="@+id/action_settingFragment_to_searchResultFragment"
            app:destination="@id/searchResultFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.onlineshop.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.onlineshop.ui.cart.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" >
        <action
            android:id="@+id/action_cartFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.onlineshop.ui.cart.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" />
</navigation>